<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_lg"
    android:layout_marginVertical="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <!-- Event Title and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_sm">

            <TextView
                android:id="@+id/text_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Important Team Meeting - Q4 Planning Session" />

            <TextView
                android:id="@+id/text_event_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodySecondary"
                android:layout_marginTop="@dimen/spacing_xs"
                tools:text="Dec 15, 2024 at 2:00 PM - 3:30 PM" />

            <TextView
                android:id="@+id/text_timezone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodySecondary"
                android:layout_marginTop="@dimen/spacing_xs"
                android:drawablePadding="@dimen/spacing_xs"
                app:drawableStartCompat="@drawable/ic_timezone"
                app:drawableTint="?attr/colorOnSurface"
                tools:text="Pacific Standard Time" />

        </LinearLayout>

        <!-- Location (if present) -->
        <TextView
            android:id="@+id/text_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.BodySecondary"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:drawablePadding="@dimen/spacing_sm"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableTint="?attr/colorOnSurface"
            tools:text="Conference Room A, Building 2"
            tools:visibility="visible" />

        <!-- Matching Rules Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_sm">

            <TextView
                android:id="@+id/text_matching_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:drawablePadding="@dimen/spacing_xs"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_rule"
                app:drawableTint="?attr/colorPrimary"
                tools:text="Matches 2 rules"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_rule_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodySecondary"
                android:layout_marginTop="@dimen/spacing_xs"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:text="Meetings (15 min), Important Events (30 min)"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Alarm Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_alarm_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textStyle="bold"
                android:drawablePadding="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_xs"
                android:layout_margin="-4dp"
                app:drawableStartCompat="@drawable/ic_alarm"
                tools:text="2 active alarms"
                tools:drawableTint="@color/success" />

            <TextView
                android:id="@+id/text_alarm_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.BodySecondary"
                android:layout_marginTop="@dimen/spacing_xs"
                android:visibility="gone"
                tools:text="Next: Dec 15, 1:45 PM (in 15 minutes)"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>