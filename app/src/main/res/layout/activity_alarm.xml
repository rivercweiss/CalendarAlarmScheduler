<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/spacing_xl"
    android:background="@color/error"
    android:keepScreenOn="true">

    <!-- Current Time Display -->
    <TextView
        android:id="@+id/currentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34 AM"
        android:textSize="48sp"
        android:textAppearance="@style/TextAppearance.App.Headline"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_lg" />

    <!-- Alarm Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALARM"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.App.Title"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:alpha="0.9"
        android:layout_marginBottom="@dimen/spacing_xxl" />

    <!-- Event Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:padding="@dimen/padding"
        android:layout_marginBottom="48dp"
        android:elevation="8dp">

        <!-- Event Title -->
        <TextView
            android:id="@+id/eventTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textAppearance="@style/TextAppearance.App.Title"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Event Time -->
        <TextView
            android:id="@+id/eventTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Time"
            android:textAppearance="@style/TextAppearance.App.Body"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Rule Info -->
        <TextView
            android:id="@+id/ruleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rule: Unknown"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:gravity="center" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- Snooze Button -->
        <Button
            android:id="@+id/snoozeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Snooze 5min"
            style="@style/Button.App.Outlined"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:elevation="2dp" />

        <!-- Dismiss Button -->
        <Button
            android:id="@+id/dismissButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Dismiss"
            style="@style/Button.App"
            android:layout_marginStart="@dimen/spacing_sm"
            android:elevation="2dp" />

    </LinearLayout>

</LinearLayout>