<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <!-- Color Indicator -->
    <View
        android:id="@+id/view_color_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@id/text_calendar_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_calendar_name"
        tools:background="@color/design_default_color_primary" />

    <!-- Calendar Name -->
    <TextView
        android:id="@+id/text_calendar_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        app:layout_constraintEnd_toStartOf="@id/checkbox_selected"
        app:layout_constraintStart_toEndOf="@id/view_color_indicator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Personal Calendar" />

    <!-- Account Name -->
    <TextView
        android:id="@+id/text_account_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintEnd_toStartOf="@id/checkbox_selected"
        app:layout_constraintStart_toEndOf="@id/view_color_indicator"
        app:layout_constraintTop_toBottomOf="@id/text_calendar_name"
        tools:text="user@gmail.com" />

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/checkbox_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>